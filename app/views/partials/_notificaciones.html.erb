<% unless notice.nil? %>
  <div class="alert alert-dismissible alert-success">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <%=  notice  %>
  </div>
<% end %>

<% unless alert.nil? %>
  <div class="alert alert-dismissible alert-warning">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <%=  alert  %>
  </div>
<% end %>