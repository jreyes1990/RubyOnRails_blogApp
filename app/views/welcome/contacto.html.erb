<div class="container-fluid">
  <div class="was-validated">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h1>Platicame si tiene alguna pregunta</h1>
        <%= form_for @contactos do |form| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= form.label "Email" %>
              <%= form.text_field :email, class: "form-control", placeholder: "Email", required: true %>
              <div class="invalid-feedback">Por favor, ingrese su correo electronico.</div>
            </div>
            <div class="form-group col-md-6">
              <%= form.label "Asunto" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Asunto", required: true %>
              <div class="invalid-feedback">Por favor, ingrese su asunto.</div>
            </div>
            <div class="form-group col-md-12">
            <%= form.label "Mensaje" %>
            <%= form.text_area :description, class: "form-control", placeholder: "Mensaje", required: true %>
              <div class="invalid-feedback">Por favor, ingrese su mensaje.</div>
            </div>
            <div class="form-group col-md-12">
            <%= form.submit "Aplicar cambios", class: "btn btn-primary", title: "Dar click si desea aplicar cambios" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
