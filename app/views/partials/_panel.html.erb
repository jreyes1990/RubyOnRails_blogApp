<% if user_signed_in? %>
  <div class="list-group">
    <%= link_to "Administrador", root_path, class: "list-group-item list-group-item-action active" %>
    <%= link_to "Ver Articulos", articles_path, class: "list-group-item list-group-item-action" %>
    <%= link_to "Crear Articulo", new_article_path, class: "list-group-item list-group-item-action" %>
    <%= link_to "Ver Categorias", categories_path, class: "list-group-item list-group-item-action" %>
    <%= link_to "Crear Categoria", new_category_path, class: "list-group-item list-group-item-action" %>
  </div>
<% end %>

<div class="list-group">
  <%= link_to "Categorias", categories_path, class: "list-group-item list-group-item-action active" %>
  <% @categorias.each do |categoria| %>
    <%= link_to categoria.name, categoria, class: "list-group-item list-group-item-action" %>
  <% end %>
</div>